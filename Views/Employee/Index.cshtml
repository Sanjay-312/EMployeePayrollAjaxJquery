@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button class="btn btn-sm btn-primary m-2" id="btnAddEmployee">Add Employee</button>
<table class="table table-bordered">

    <thead>
        <tr class="text-center">
            <th>Id</th>
            <th>Name</th>
            <th>gender</th>
            <th>department</th>
            <th>Salary</th>
            <th>StartDate</th>
            <th>Image</th>
            <th>Notes</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_data"></tbody>
</table>
<div class="modal fade modal" id="empModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" id="AddEmpHead">
                <h1 class="text-info modal-title change-color ">Add Employee</h1>
                <button class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-header" id="updateEmpHead">
                <h1 class="text-info modal-title">Update Employee</h1>
                <button class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <label >EmpId</label>
                        <input type="text"  class="form-control" id="empId" disabled="disabled" />

                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" placeholder="enter name" class="form-control" id="name" />
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <input type="text" placeholder="enter gender" class="form-control" id="gender" />
                        
                    </div>

                    <div class="form-group">
                        <label>Department</label>
                        <input type="text" placeholder="enter department" class="form-control" id="department" />
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        <input type="text" placeholder="enter salary" class="form-control" id="salary"  />
                    </div>
                    <div class="form-group">
                        <label>Start Date</label>
                        <input type="date" placeholder="enter start date" class="form-control" id="startDate"  />
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <input type="text" placeholder="enter image" class="form-control" id="image"  />
                    </div>
                    <div class="form-group">
                        <label>Notes</label>
                        <input type="text" placeholder="enter notes" class="form-control" id="notes"  />
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddEmployee();" id="saveBtn">Save</button>
                <button class="btn btn-warning" onclick="updateEmployee();" style="display:none" id="updateBtn">Update</button>
                <button class="btn btn-danger btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


